{
  "name": "focuswrite",
  "version": "1.0.0",
  "description": "一款基于 Electron 的极简写作工具",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "dev:vite": "vite",
    "build": "electron-builder",
    "preview": "vite preview",
    "electron": "cross-env NODE_ENV=development electron .",
    "electron:build": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.zhangdali.focuswrite",
    "productName": "FocusWrite",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "src/**/*",
      "main.js",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis", 
          "arch": ["x64"] 
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    }
  },
  "dependencies": {
    "pinia": "^2.1.0",
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "concurrently": "^8.2.0",
    "cross-env": "^10.1.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "keywords": [
    "electron",
    "vue",
    "writing",
    "focus"
  ],
  "author": "",
  "license": "MIT"
}
